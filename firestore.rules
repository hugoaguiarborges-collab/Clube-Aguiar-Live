rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Permite leitura de qualquer atleta
    match /athletes/{athleteId} {
      allow read: if true;
      // Permite escrita apenas ao usuário admin (substitua pelo UID correto)
      allow write: if request.auth != null && request.auth.uid == "ADMIN_UID_AQUI";
    }
    // Bloqueia acessos não previstos em outras coleções
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
